SHELL=/bin/bash
PATH=/sbin:/bin:/usr/sbin:/usr/bin:/opt/cbmon/bin
MAILTO=root
HOME=/
# For details see man 4 crontabs

# Example of job definition:
# .---------------- minute (0 - 59)
# |  .------------- hour (0 - 23)
# |  |  .---------- day of month (1 - 31)
# |  |  |  .------- month (1 - 12) OR jan,feb,mar,apr ...
# |  |  |  |  .---- day of week (0 - 6) (Sunday=0 or 7) OR sun,mon,tue,wed,thu,fri,sat
# |  |  |  |  |
# *  *  *  *  * user-name  command to be executed

30 * * * * root cbmon -t management/sc-r11r9-s1 -- "cb-linux sc-r11r9-s1"
30 * * * * root cbmon -t workers/sc-r11r9-s2 -- "cb-linux sc-r11r9-s2"
30 * * * * root cbmon -t memx/sc-r11r9-s3 -- "cb-linux sc-r11r9-s3"
30 * * * * root cbmon -t memx/sc-r11r9-s4 -- "cb-linux sc-r11r9-s4"
30 * * * * root cbmon -t memx/sc-r11r9-s5 -- "cb-linux sc-r11r9-s5"
30 * * * * root cbmon -t memx/sc-r11r9-s6 -- "cb-linux sc-r11r9-s6"
30 * * * * root cbmon -t memx/sc-r11r9-s7 -- "cb-linux sc-r11r9-s7"
30 * * * * root cbmon -t memx/sc-r11r9-s8 -- "cb-linux sc-r11r9-s8"
